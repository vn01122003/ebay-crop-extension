{
  "manifest_version": 3,
  "name": "eBay Image Cropper & Sender",
  "version": "1.0",
  "permissions": ["activeTab", "scripting", "storage"],
  "content_scripts": [
    {
      "matches": [
        "https://*.ebay.com/*",
        "https://*.shopee.vn/*",
        "https://*.lazada.vn/*",
        "https://*.amazon.com/*"
      ],
      "js": ["content.js"]
    }
  ],
  "host_permissions": ["<all_urls>"]
}
